extends layout 

block content 

    h1 Delete Category  #{category.name}
    
    if category_list.length 
        p #[strong Delete the following books before attempting to delete this genre.]

        div(style='margin-left:20px;margin-top:20px')

        h4 List 

        dl 
            each item in category_list 
                dt 
                    a(href=item.url) #{(item.name)}
                dd #{item.description}

    else 
        p Do you really want to delete this Genre?

        form(method='POST')
            div.form-group
                input#id.form-control(type='hidden',name='id',value=category._id)
            button.btn.btn-primary(type='submit') Delete
