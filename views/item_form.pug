extends layout 

block content 

    h1=title

    form(method='POST')
        div.form-group
            label(for='name') Item: 
            input#name.form-control(type='text', name='name' required value=(undefined===item ? '' :item.name))
        div.form-group
            label(for='category') Category: 
            select#category.form-group(name='category' required)
                option(value='') --Please select a category--
                for category in AllCategories 
                    if item 
                        if category._id.toString()===item.category._id.toString()
                            option(value=category._id selected) #{category.name}
                        else 
                            option(value=category._id) #{category.name}
                    else 
                        option(value=category._id) #{category.name}
        div.form-group
            label(for='description') Description: 
            input#name.form-control(type='text', name='description' required value=(undefined===item ? '' :item.description))
        div.form-group
            label(for='description') Price: 
            input#name.form-control(type='number', name='price' required value=(undefined===item ? '' : item.price))
        div.form-group
            label(for='description') Stock: 
            input#name.form-control(type='number', name='stock' required value=(undefined===item ? '' : item.stock))
        div.form-group
            label(for='description') Image URL: 
            input#name.form-control(type='text', name='image_url' )
        button.btn.btn-primary(type='submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg